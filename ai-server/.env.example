# Morrowind AI Framework - Environment Variables Example
# Copy this file to .env and fill in your API keys and settings

# Server settings
SERVER_HOST=localhost
SERVER_PORT=8080
LOG_LEVEL=info  # debug, info, warning, error, critical

# LLM provider settings
LLM_PROVIDER=openai  # openai, anthropic, local
LLM_MODEL=gpt-3.5-turbo  # For OpenAI: gpt-3.5-turbo, gpt-4, etc.

# OpenAI API settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_openai_organization_id_here  # Optional

# Anthropic API settings
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local LLM settings
LOCAL_LLM_PATH=models/llama-7b  # Path to local model

# Voice settings
VOICE_ENABLED=false  # true or false
VOICE_PROVIDER=elevenlabs  # elevenlabs, local
VOICE_ID=default  # For ElevenLabs: voice ID

# ElevenLabs API settings
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
